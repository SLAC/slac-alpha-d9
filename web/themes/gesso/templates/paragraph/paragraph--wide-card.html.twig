{% set wide_card %}
{% include '@components/wide-card/wide-card.twig' with {
  image: content.field_image,
  title: content.field_short_text|field_value,
  content: content|without('field_image', 'field_short_text')
} %}
{% endset %}

{% if is_nested %}{{ wide_card }}{% else %}
  {% include '@layouts/section/section.twig' with {
    section_content: wide_card,
    modifier_classes: 'l-section--no-padding',
    has_constrain: true
  } %}
{% endif %}
