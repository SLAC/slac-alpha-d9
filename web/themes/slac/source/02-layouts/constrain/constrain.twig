{% set classes = [
  'l-constrain',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

{% if is_demo and not constrain_content %}
  {% import '@global/gesso.macro.twig' as macros %}
  {% set constrain_content %}
    {{ macros.sample_content('Constrain Content') }}
  {% endset %}
{% endif %}

<div {{ add_attributes({ 'class': classes }) }}>
  {{ constrain_content }}
</div>
