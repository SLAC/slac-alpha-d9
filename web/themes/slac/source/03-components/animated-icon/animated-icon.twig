{% set classes = [
  'c-animated-icon',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

{% if animation == 'accelerator1' %}
  {% set animation_file_base = 'ACCELERATOR_Icon_6_hover' %}
{% elseif animation == 'accelerator2' %}
  {% set animation_file_base = 'ACCELERATOR_Pattern2_hover' %}
{% elseif animation == 'cryo1' %}
  {% set animation_file_base = 'cyro-em_icon-01_hover' %}
{% elseif animation == 'cryo2' %}
  {% set animation_file_base = 'cyro-em_icon-06' %}
{% elseif animation == 'laser1' %}
  {% set animation_file_base = 'Laser_icon_2_hover' %}
{% elseif animation == 'laser2' %}
  {% set animation_file_base = 'Laser_icon_4_hover' %}
{% elseif animation == 'space1' %}
  {% set animation_file_base = 'Space_Icon_1_hover' %}
{% elseif animation == 'space2' %}
  {% set animation_file_base = 'Space_icon_4_hover' %}
{% else %}
  {% set animation_file_base = 'Xray_icon_2_hover' %}
{% endif %}

{% set animation_file = animation_file_base ~ ' ' ~ color ~ '.json' %}

<lottie-player class="{{ classes }}" src="animations/{{ animation_file }}" background="transparent" speed="1" loop="true" count="1"{% if hover %} hover{% endif %}></lottie-player>
