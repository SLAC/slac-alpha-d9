{% set classes = [
  'c-alert-bar',
  'c-alert-bar--' ~ alert_type,
  modifier_classes ? modifier_classes : ''
] %}

<div {{ add_attributes({ class: classes, role: 'alert' } ) }}>
  <div class="l-constrain">
    <div class="c-alert-bar__inner">

      <div class="c-alert-bar__header">
        {% include '@components/icon/icon.twig' with {
          'icon_name': 'alert-' ~ alert_type,
          'label': alert_type,
        } %}
        <span class="c-kicker">
          {{ alert_kicker }}
        </span>
      </div>

      <div class="c-alert-bar__content">
        {{ alert_content }}
      </div>

      <button class="c-alert-bar__button js-dismiss-button" type="button">
        {{- 'Dismiss'|t -}}
        {% include '@components/icon/icon.twig' with {
          'icon_name': 'close-inverted',
          'label': 'Close',
          'is_demo': false,
          'hidden': true
        } %}
      </button>
    </div>
  </div>
</div>
