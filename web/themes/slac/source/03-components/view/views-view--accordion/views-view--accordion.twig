{% set classes = [
  'c-view',
  'c-views-view--accordion',
  modifier_classes ? modifier_classes : ''
] %}

<{{ element ?: 'div' }} {{ add_attributes({ 'class': classes })}}>
<div class="l-constrain l-constrain--small">
  {{ title_prefix }}{{ title }}{{ title_suffix }}

  {% if header %}
    <div class="c-view__header">
      {{- header -}}
    </div>
  {% endif %}

  {% if exposed %}
  <div class="c-view__exposed">
    {{- exposed -}}
  </div>
  {% endif %}

  {{ attachment_before }}
  {% if rows %}
    {% include '@components/accordion/accordion.twig' with {
      accordion_items: rows
    } %}
  {% elseif empty %}
    <div class="c-view__empty">
      {{- empty -}}
    </div>
  {% endif %}

  {{ pager }}
  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <div class="c-view__footer">
      {{- footer -}}
    </div>
  {% endif %}

  {{ feed_icons }}
</div>
</{{ element ?: 'div' }}>
